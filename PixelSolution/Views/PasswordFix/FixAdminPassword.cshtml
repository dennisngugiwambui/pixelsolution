@{
    ViewData["Title"] = "Fix Admin Password";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Password Hash Fix Utility</h3>
                </div>
                <div class="card-body">
                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger">
                            <strong>Error:</strong> @ViewBag.Error
                        </div>
                    }
                    else
                    {
                        <div class="mb-3">
                            <h5>Email: dennisngugi219@gmail.com</h5>
                            <h5>Password: Admin1234</h5>
                        </div>

                        @if (ViewBag.CurrentTest != null)
                        {
                            <div class="alert @(ViewBag.CurrentTest ? "alert-success" : "alert-warning")">
                                <strong>Current Password Test:</strong> @(ViewBag.CurrentTest ? "✅ PASSED" : "❌ FAILED")
                            </div>
                        }

                        @if (ViewBag.UpdateResult != null)
                        {
                            <div class="alert @(ViewBag.UpdateResult ? "alert-success" : "alert-danger")">
                                <strong>Password Update:</strong> @(ViewBag.UpdateResult ? "✅ SUCCESS" : "❌ FAILED")
                            </div>
                        }

                        @if (ViewBag.NewTest != null)
                        {
                            <div class="alert @(ViewBag.NewTest ? "alert-success" : "alert-danger")">
                                <strong>New Password Test:</strong> @(ViewBag.NewTest ? "✅ PASSED" : "❌ FAILED")
                            </div>
                        }

                        @if (ViewBag.Message != null)
                        {
                            <div class="alert alert-info">
                                <strong>Result:</strong> @ViewBag.Message
                            </div>
                        }

                        <div class="mt-4">
                            <a href="@Url.Action("Login", "Auth")" class="btn btn-primary">
                                Go to Login Page
                            </a>
                            <a href="@Url.Action("FixAdminPassword", "PasswordFix")" class="btn btn-secondary">
                                Run Fix Again
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
