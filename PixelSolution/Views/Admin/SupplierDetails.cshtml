                                       min="0" 
                                       step="0.01"
                                       value="${product.buyingPrice || product.price || 0}"
                                       placeholder="0.00"
                                       class="form-control">
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group">
