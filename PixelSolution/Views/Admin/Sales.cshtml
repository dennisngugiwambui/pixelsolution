</div>

<!-- Main Content -->
<div class="main-content" id="mainContent">
    <!-- Header -->
    <header class="header">
        <div class="header-left">
            <button class="sidebar-toggle" id="sidebarToggle">
                <i class="fas fa-bars"></i>
            </button>
            <h1 class="page-title">Point of Sale System</h1>
        </div>
        <div class="header-right">
            <div class="header-actions">
                <a href="@Url.Action("SalesHistory", "Admin")" class="action-btn" title="Sales History">
                    <i class="fas fa-history"></i>
                </a>
                <button class="action-btn" title="Notifications">
                    <i class="fas fa-bell"></i>
                    <span class="notification-badge">3</span>
                </button>
                <button class="action-btn" title="Profile">
                    <i class="fas fa-user-circle"></i>
                </button>
            </div>
        </div>
    </header>

    <!-- Page Content -->
    <div class="dashboard-content">
        <!-- Stats Row -->
        <div class="stats-grid" style="grid-template-columns: repeat(auto-fit, minmax(120px, 1fr)); margin-bottom: 1.5rem;">
            <div class="stat-card" style="--card-color: #10b981;">
                <div class="stat-header">
                    <div class="stat-icon">
                        <i class="fas fa-dollar-sign"></i>
                    </div>
                </div>
                <div class="stat-value" id="todaySales">KSh @Model.TodaysSales.ToString("N2")</div>
                <div class="stat-label">Today's Sales</div>
            </div>
            <div class="stat-card" style="--card-color: #3b82f6;">
                <div class="stat-header">
                    <div class="stat-icon">
                        <i class="fas fa-shopping-cart"></i>
                    </div>
                </div>
                <div class="stat-value" id="todayTransactions">@Model.TodaysTransactions</div>
                <div class="stat-label">Transactions</div>
            </div>
            <div class="stat-card" style="--card-color: #8b5cf6;">
                <div class="stat-header">
                    <div class="stat-icon">
                        <i class="fas fa-clock"></i>
                    </div>
                </div>
                <div class="stat-value" id="avgTransaction">KSh @Model.AverageTransaction.ToString("N2")</div>
                <div class="stat-label">Avg Transaction</div>
            </div>
        </div>

        <div class="pos-container">
            <!-- Products Section -->
            <div class="products-section">
                <!-- Search and Filters -->
                <div class="search-filters">
                    <div class="search-container">
                        <i class="fas fa-search search-icon"></i>
                        <input type="text" class="search-input" placeholder="Search products by name, SKU, or barcode..." id="productSearch">
                    </div>
                    <div style="display: flex; gap: 0.5rem;">
                        <select id="categoryFilter" class="filter-select">
                            <option value="">All Categories</option>
                        </select>
                        <select id="stockFilter" class="filter-select">
                            <option value="">All Stock</option>
                            <option value="in-stock">In Stock</option>
                            <option value="low-stock">Low Stock</option>
                        </select>
                    </div>
                </div>

                <!-- Stock Warning -->
                <div class="stock-warning" id="stockWarning">
                    <i class="fas fa-exclamation-triangle"></i>
                    <span id="stockWarningText"></span>
                </div>

                <!-- Products Grid -->
                <div id="productsContainer">
                    <div style="text-align: center; padding: 4rem; color: #64748b;">
                        <i class="fas fa-spinner fa-spin" style="font-size: 2rem; margin-bottom: 1rem;"></i>
                        <h3>Loading products...</h3>
                    </div>
                </div>
            </div>

            <!-- Cart Section -->
            <div class="cart-section">
                <!-- Cart Header -->
                <div class="cart-header">
                    <h2 style="font-size: 1.1rem; font-weight: 700; margin-bottom: 0.75rem; color: #1f2937;">
                        <i class="fas fa-shopping-cart" style="color: #3b82f6; margin-right: 0.5rem;"></i>
                        Current Sale
                    </h2>
                    <div style="display: flex; justify-content: space-between; align-items: center; font-size: 0.85rem;">
                        <span style="color: #6b7280; font-weight: 600;">Items: <span id="cartItemCount">0</span></span>
                        <span style="color: #6b7280; font-weight: 600;">Subtotal: <strong id="cartSubtotalDisplay" style="color: #10b981;">KSh 0.00</strong></span>
                    </div>
                </div>

                <!-- Cart Items -->
                <div class="cart-items" id="cartItems">
                    <div class="empty-cart">
                        <i class="fas fa-shopping-cart"></i>
                        <h3>Your cart is empty</h3>
                        <p>Add products to start a sale</p>
                    </div>
                </div>

                <!-- Cart Footer -->
                <div class="cart-footer">
                    <div class="cart-total">
                        <div class="total-row">
                            <span>Subtotal:</span>
                            <span id="subtotalAmount">KSh 0.00</span>
                        </div>
                        <div class="total-row">
                            <span>Tax (16%):</span>
                            <span id="taxAmount">KSh 0.00</span>
                        </div>
                        <div class="total-row final">
                            <span>Total:</span>
                            <span id="totalAmount">KSh 0.00</span>
                        </div>
                    </div>

                    <div class="action-buttons">
                        <button class="btn btn-secondary" onclick="clearCart()" id="clearBtn" disabled>
                            <i class="fas fa-trash"></i> Clear
                        </button>
                        <button class="btn btn-warning" onclick="holdSale()" id="holdBtn" disabled>
                            <i class="fas fa-pause"></i> Hold
                        </button>
                    </div>

                    <button class="checkout-btn" onclick="openPaymentModal()" id="checkoutBtn" disabled>
                        <i class="fas fa-credit-card" style="margin-right: 0.5rem;"></i>
                        Proceed to Payment
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Payment Modal -->
<div id="paymentModal" class="modal">
    <div class="modal-content">
        <div class="modal-header">
            <h2 class="modal-title">Process Payment</h2>
            <button class="close-btn" onclick="closePaymentModal()">
                <i class="fas fa-times"></i>
            </button>
        </div>

        <div style="margin-bottom: 2rem; padding: 1.5rem; background: linear-gradient(135deg, #f0f9ff, #e0f2fe); border-radius: 12px; border: 2px solid #0ea5e9;">
            <div style="display: flex; justify-content: space-between; align-items: center;">
                <span style="font-size: 1.1rem; color: #0369a1; font-weight: 600;">Total Amount:</span>
                <strong style="font-size: 1.8rem; color: #10b981; font-weight: 700;" id="modalTotalAmount">KSh 0.00</strong>
            </div>
        </div>

        <!-- Payment Method Selection -->
        <div id="paymentMethodSelection">
            <h3 style="margin-bottom: 1rem; font-size: 1.1rem; color: #374151;">Select Payment Method:</h3>
            <div class="payment-options">
                <div class="payment-option" onclick="selectPaymentMethod('cash')">
                    <i class="fas fa-money-bill-wave"></i>
                    <div style="font-weight: 600;">Cash Payment</div>
                </div>
                <div class="payment-option" onclick="selectPaymentMethod('mpesa')">
                    <i class="fas fa-mobile-alt"></i>
                    <div style="font-weight: 600;">M-Pesa Payment</div>
                </div>
            </div>
        </div>

        <!-- Cash Payment Form -->
        <div id="cashPaymentForm" style="display: none;">
            <h3 style="margin-bottom: 1rem; font-size: 1.1rem; color: #374151;">Cash Payment</h3>
            <div class="form-group">
                <label class="form-label">Amount Received (KSh):</label>
                <input type="number" id="cashReceived" class="form-input" placeholder="Enter amount received" min="0" step="0.01">
            </div>
            <div class="quick-amounts">
                <button type="button" class="quick-amount-btn" onclick="setQuickAmount('exact')">Exact</button>
                <button type="button" class="quick-amount-btn" onclick="setQuickAmount(500)">KSh 500</button>
                <button type="button" class="quick-amount-btn" onclick="setQuickAmount(1000)">KSh 1,000</button>
                <button type="button" class="quick-amount-btn" onclick="setQuickAmount(2000)">KSh 2,000</button>
                <button type="button" class="quick-amount-btn" onclick="setQuickAmount(5000)">KSh 5,000</button>
            </div>
            <div id="changeDisplay" class="change-display" style="display: none;">
                <div style="display: flex; justify-content: space-between; align-items: center;">
                    <span id="changeLabel">Change:</span>
                    <strong id="changeAmount">KSh 0.00</strong>
                </div>
            </div>
        </div>

        <!-- M-Pesa Payment Form -->
        <div id="mpesaPaymentForm" style="display: none;">
            <h3 style="margin-bottom: 1rem; font-size: 1.1rem; color: #374151;">M-Pesa Payment</h3>
            <div class="form-group">
                <label class="form-label">Customer Phone Number:</label>
                <div style="display: flex; align-items: center;">
                    <span style="padding: 0.75rem; background: #f3f4f6; border: 2px solid #e5e7eb; border-right: none; border-radius: 8px 0 0 8px; font-weight: 600;">+254</span>
                    <input type="text" id="customerPhone" class="form-input" style="border-radius: 0 8px 8px 0;" placeholder="7XXXXXXXX" maxlength="9">
                </div>
            </div>
            <div style="padding: 1rem; background: #f0f9ff; border-radius: 8px; border: 2px solid #0ea5e9; margin-top: 1rem;">
                <p style="margin: 0; font-size: 0.875rem; color: #0369a1;">
                    <i class="fas fa-info-circle" style="margin-right: 0.5rem;"></i>
                    Customer will receive an STK push to complete payment.
                </p>
            </div>
        </div>

        <!-- Action Buttons -->
        <div style="display: flex; gap: 1rem; margin-top: 2rem;">
            <button class="btn btn-secondary" onclick="closePaymentModal()" style="flex: 1;">Cancel</button>
            <button id="completePaymentBtn" class="btn" onclick="completePayment()" style="flex: 2; background: linear-gradient(135deg, #10b981, #059669); color: white;" disabled>
                Complete Payment
            </button>
        </div>
    </div>
</div>

<!-- Receipt Modal -->
<div id="receiptModal" class="modal">
    <div class="modal-content" style="max-width: 450px;">
        <div class="modal-header">
            <h2 class="modal-title">Receipt Generated</h2>
            <button class="close-btn" onclick="closeReceiptModal()">
                <i class="fas fa-times"></i>
            </button>
        </div>

        <div id="receiptContent" class="receipt-preview">
            <!-- Receipt content will be populated here -->
        </div>

        <div style="display: flex; gap: 1rem; margin-top: 1.5rem;">
            <button class="btn btn-secondary" onclick="closeReceiptModal()" style="flex: 1;">Close</button>
            <button class="btn btn-primary" onclick="printReceipt()" style="flex: 1;">
                <i class="fas fa-print"></i> Print
            </button>
            <button class="btn btn-primary" onclick="downloadReceiptPDF()" style="flex: 1;">
                <i class="fas fa-download"></i> Save PDF
            </button>
        </div>
    </div>
</div>

@* CSRF Token Form *@
<form id="hiddenTokenForm" style="display: none;">
    @Html.AntiForgeryToken()
</form>

@section Scripts {
    <script src="~/js/dashboard.js"></script>
    <script src="~/js/sales.js"></script>
}