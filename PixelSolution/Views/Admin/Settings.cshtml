                var updateData = {
                    UserId: userId,
                    UserType: newRole
                };
                
                fetch('@Url.Action("UpdateUserRole", "Admin")', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': tokenValue
