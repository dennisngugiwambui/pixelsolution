@{
    ViewData["Title"] = "Wishlist Management";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h4 class="card-title mb-0">
                        <i class="fas fa-heart text-danger me-2"></i>Wishlist Management
                    </h4>
                    <div class="d-flex gap-2">
                        <button class="btn btn-outline-info btn-sm" onclick="refreshData()">
                            <i class="fas fa-refresh me-1"></i>Refresh
                        </button>
                    </div>
                </div>
                <div class="card-body">
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger">
                            <i class="fas fa-exclamation-triangle me-2"></i>@TempData["Error"]
                        </div>
                    }

                    @if (Model != null && Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Product</th>
                                        <th>Category</th>
                                        <th>Price</th>
                                        <th>Stock Status</th>
                                        <th>Wishlist Count</th>
                                        <th>Latest Wishlist</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    @if (!string.IsNullOrEmpty(item.Product.ImageUrl))
                                                    {
                                                        <img src="@item.Product.ImageUrl" alt="@item.Product.Name" class="rounded me-2" style="width: 40px; height: 40px; object-fit: cover;">
                                                    }
                                                    else
                                                    {
                                                        <div class="bg-light rounded me-2 d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                                                            <i class="fas fa-image text-muted"></i>
                                                        </div>
                                                    }
                                                    <div>
                                                        <div class="fw-semibold">@item.Product.Name</div>
                                                        <small class="text-muted">SKU: @item.Product.SKU</small>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                <span class="badge bg-info">@(item.Product.Category?.Name ?? "Unknown")</span>
                                            </td>
                                            <td>
                                                <span class="fw-bold text-success">@item.Product.SellingPrice.ToString("C")</span>
                                            </td>
                                            <td>
                                                <span class="badge @(item.Product.StockQuantity > 0 ? "bg-success" : "bg-danger")">
                                                    @(item.Product.StockQuantity > 0 ? "In Stock" : "Out of Stock")
                                                </span>
                                                @if (item.Product.StockQuantity > 0)
                                                {
                                                    <small class="d-block text-muted">@item.Product.StockQuantity units</small>
                                                }
                                            </td>
                                            <td>
                                                <span class="badge bg-primary fs-6">@item.WishlistCount</span>
                                                <small class="d-block text-muted">customers</small>
                                            </td>
                                            <td>
                                                <small class="text-muted">@item.LatestWishlistDate.ToString("MMM dd, yyyy")</small>
                                            </td>
                                            <td>
                                                <div class="btn-group btn-group-sm">
                                                    <button class="btn btn-outline-primary" onclick="viewCustomers(@item.ProductId)" title="View Customers">
                                                        <i class="fas fa-users"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-heart text-muted" style="font-size: 4rem;"></i>
                            <h5 class="mt-3 text-muted">No Wishlist Items Found</h5>
                            <p class="text-muted">There are currently no items in any customer wishlists.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Customers Modal -->
<div class="modal fade" id="customersModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="fas fa-users text-primary me-2"></i>Customers Who Wishlisted This Product
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div id="customersContent">
                    <div class="text-center py-3">
                        <div class="spinner-border text-primary" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function viewCustomers(productId) {
            $('#customersModal').modal('show');
            
            fetch(`/Admin/GetWishlistCustomers?productId=${productId}`)
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        displayCustomers(data.customers);
                    } else {
                        $('#customersContent').html('<div class="alert alert-danger">Error loading customer data.</div>');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    $('#customersContent').html('<div class="alert alert-danger">Error loading customer data.</div>');
                });
        }

        function displayCustomers(customers) {
            if (!customers || customers.length === 0) {
                $('#customersContent').html('<div class="alert alert-info">No customers have wishlisted this product.</div>');
                return;
            }

            let html = '<div class="table-responsive"><table class="table table-hover"><thead class="table-light"><tr><th>Customer</th><th>Phone</th><th>Email</th><th>Wishlist Date</th><th>Actions</th></tr></thead><tbody>';
            
            customers.forEach(customer => {
                html += `
                    <tr>
                        <td>
                            <div class="d-flex align-items-center">
                                <div class="avatar-sm bg-primary rounded-circle d-flex align-items-center justify-content-center me-2">
                                    <span class="text-white fw-bold">${customer.customerName.substring(0, 1)}</span>
                                </div>
                                <div>
                                    <div class="fw-semibold">${customer.customerName}</div>
                                    <small class="text-muted">ID: ${customer.customerId}</small>
                                </div>
                            </div>
                        </td>
                        <td>
                            <span class="text-muted">${customer.customerPhone}</span>
                        </td>
                        <td>
                            <span class="text-muted">${customer.customerEmail}</span>
                        </td>
                        <td>
                            <small class="text-muted">${new Date(customer.wishlistDate).toLocaleDateString()}</small>
                        </td>
                        <td>
                            <button class="btn btn-sm btn-outline-danger" onclick="removeFromWishlist(${customer.wishlistId})" title="Remove from wishlist">
                                <i class="fas fa-trash"></i>
                            </button>
                        </td>
                    </tr>
                `;
            });
            
            html += '</tbody></table></div>';
            $('#customersContent').html(html);
        }

        function removeFromWishlist(wishlistId) {
            if (!confirm('Are you sure you want to remove this item from the customer\'s wishlist?')) {
                return;
            }

            fetch('/Admin/RemoveFromWishlist', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ wishlistId: wishlistId })
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    showToast('Item removed from wishlist successfully', 'success');
                    $('#customersModal').modal('hide');
                    location.reload(); // Refresh the page to update the counts
                } else {
                    showToast(data.message || 'Error removing item', 'error');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                showToast('Error removing item from wishlist', 'error');
            });
        }

        function refreshData() {
            location.reload();
        }

        function showToast(message, type) {
            // Simple toast implementation
            const toast = document.createElement('div');
            toast.className = `alert alert-${type === 'success' ? 'success' : type === 'error' ? 'danger' : 'info'} position-fixed`;
            toast.style.cssText = 'top: 20px; right: 20px; z-index: 9999; min-width: 300px;';
            toast.innerHTML = `
                <div class="d-flex align-items-center">
                    <i class="fas fa-${type === 'success' ? 'check-circle' : type === 'error' ? 'exclamation-triangle' : 'info-circle'} me-2"></i>
                    ${message}
                    <button type="button" class="btn-close ms-auto" onclick="this.parentElement.parentElement.remove()"></button>
                </div>
            `;
            document.body.appendChild(toast);
            
            setTimeout(() => {
                if (toast.parentElement) {
                    toast.remove();
                }
            }, 5000);
        }
    </script>
}
