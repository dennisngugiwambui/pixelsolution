            }));

            const csv = convertToCSV(exportData);
            downloadCSV(csv, `wishlist-analytics-${new Date().toISOString().split('T')[0]}.csv`);
            showToast('Wishlist analytics exported successfully', 'success');
        }

        async function generateWishlistReport() {
            try {
                showToast('Generating comprehensive wishlist report...', 'info');
                
                const response = await fetch('/Admin/GenerateWishlistReport', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                });

                if (!response.ok) throw new Error('Failed to generate report');

                const blob = await response.blob();
                const url = window.URL.createObjectURL(blob);
                const a = document.createElement('a');
                a.style.display = 'none';
                a.href = url;
                a.download = `wishlist-report-${new Date().toISOString().split('T')[0]}.pdf`;
                document.body.appendChild(a);
                a.click();
                window.URL.revokeObjectURL(url);
                document.body.removeChild(a);

                showToast('Wishlist report generated successfully', 'success');
            } catch (error) {
                showToast('Error generating report', 'error');
            }
        }

        function convertToCSV(data) {
            if (data.length === 0) return '';
            const headers = Object.keys(data[0]);
            const csvContent = [
                headers.join(','),
                ...data.map(row => headers.map(header => `"${row[header] || ''}"`).join(','))
            ].join('\n');
            return csvContent;
        }

        function downloadCSV(csv, filename) {
            const blob = new Blob([csv], { type: 'text/csv' });
            const url = window.URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.setAttribute('hidden', '');
            a.setAttribute('href', url);
            a.setAttribute('download', filename);
            document.body.appendChild(a);
            a.click();
            document.body.removeChild(a);
        }

        function resetFilters() {
            document.getElementById('wishlistStatusFilter').value = '';
            document.getElementById('sortBy').value = 'recent';
            document.getElementById('minItems').value = '';
            document.getElementById('minValue').value = '';
            document.getElementById('maxDays').value = '';
            document.getElementById('searchInput').value = '';
            filterWishlists();
        }

        function refreshData() {
            location.reload();
        }

        // Close modals when clicking outside
        window.onclick = function(event) {
            const wishlistModal = document.getElementById('wishlistDetailsModal');
            const customerModal = document.getElementById('customerProfileModal');
            
            if (event.target === wishlistModal) {
                closeWishlistDetailsModal();
            }
            if (event.target === customerModal) {
                closeCustomerProfileModal();
            }
        }
    </script>
