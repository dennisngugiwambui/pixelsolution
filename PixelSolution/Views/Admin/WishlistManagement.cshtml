@section Scripts {
    <script src="~/js/dashboard.js"></script>
    <script>
        let allWishlists = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model));
        let currentPage = 1;
        let itemsPerPage = 12;
        let filteredWishlists = [];

        document.addEventListener('DOMContentLoaded', function() {
            setupFilters();
            setupSearch();
            loadPopularProducts();
            filterWishlists();
        });

        function setupFilters() {
            const filters = ['wishlistStatusFilter', 'sortBy', 'minItems', 'minValue', 'maxDays'];
            filters.forEach(filterId => {
                const element = document.getElementById(filterId);
                if (element) {
                    element.addEventListener('change', filterWishlists);
                    if (['minItems', 'minValue', 'maxDays'].includes(filterId)) {
                        element.addEventListener('input', debounce(filterWishlists, 300));
                    }
                }
            });
        }

        function setupSearch() {
            const searchInput = document.getElementById('searchInput');
            if (searchInput) {
                searchInput.addEventListener('input', debounce(filterWishlists, 300));
            }
        }

        function debounce(func, wait) {
            let timeout;
            return function executedFunction(...args) {
                const later = () => {
                    clearTimeout(timeout);
                    func(...args);
                };
                clearTimeout(timeout);
                timeout = setTimeout(later, wait);
            };
        }

        function filterWishlists() {
            const searchTerm = document.getElementById('searchInput')?.value.toLowerCase() || '';
            const statusFilter = document.getElementById('wishlistStatusFilter')?.value || '';
            const sortBy = document.getElementById('sortBy')?.value || 'recent';
            const minItems = parseInt(document.getElementById('minItems')?.value) || 0;
            const minValue = parseFloat(document.getElementById('minValue')?.value) || 0;
            const maxDays = parseInt(document.getElementById('maxDays')?.value) || 999999;

            filteredWishlists = allWishlists.filter(wishlist => {
                const matchesSearch = !searchTerm ||
                    wishlist.CustomerName.toLowerCase().includes(searchTerm) ||
                    wishlist.CustomerEmail.toLowerCase().includes(searchTerm);

                let matchesStatus = true;
                if (statusFilter === 'active') matchesStatus = wishlist.TotalItems > 0;
                else if (statusFilter === 'empty') matchesStatus = wishlist.TotalItems === 0;
                else if (statusFilter === 'new') matchesStatus = wishlist.DaysOld <= 7;
                else if (statusFilter === 'stale') matchesStatus = wishlist.DaysOld > 90;

                const matchesMinItems = wishlist.TotalItems >= minItems;
                const matchesMinValue = wishlist.TotalValue >= minValue;
                const matchesMaxDays = wishlist.DaysOld <= maxDays;

                return matchesSearch && matchesStatus && matchesMinItems && matchesMinValue && matchesMaxDays;
            });

            // Sort wishlists
            filteredWishlists.sort((a, b) => {
                switch (sortBy) {
                    case 'recent': return new Date(b.LastActivity) - new Date(a.LastActivity);
                    case 'customer': return a.CustomerName.localeCompare(b.CustomerName);
                    case 'items': return b.TotalItems - a.TotalItems;
                    case 'value': return b.TotalValue - a.TotalValue;
                    case 'oldest': return new Date(a.LastActivity) - new Date(b.LastActivity);
                    default: return new Date(b.LastActivity) - new Date(a.LastActivity);
                }
            });

            displayWishlists();
            updatePagination();
        }

        function displayWishlists() {
            const grid = document.getElementById('wishlistGrid');
            const emptyState = document.getElementById('emptyState');

            if (filteredWishlists.length === 0) {
                grid.style.display = 'none';
                emptyState.style.display = 'block';
                return;
            }

            grid.style.display = 'grid';
            emptyState.style.display = 'none';

            const startIndex = (currentPage - 1) * itemsPerPage;
            const endIndex = startIndex + itemsPerPage;
            const wishlistsToShow = filteredWishlists.slice(startIndex, endIndex);

            // Hide all cards first
            const allCards = grid.querySelectorAll('.wishlist-card');
            allCards.forEach(card => card.style.display = 'none');

            // Show only relevant cards for current page
            wishlistsToShow.forEach(wishlist => {
                const card = grid.querySelector(`[data-wishlist-id="${wishlist.CustomerId}"]`);
                if (card) {
                    card.style.display = 'block';
                }
            });
        }

        function updatePagination() {
            const totalPages = Math.ceil(filteredWishlists.length / itemsPerPage);
            const paginationContainer = document.getElementById('paginationContainer');
            const prevBtn = document.getElementById('prevBtn');
            const nextBtn = document.getElementById('nextBtn');
            const pageNumbers = document.getElementById('pageNumbers');

            if (totalPages <= 1) {
                paginationContainer.style.display = 'none';
                return;
            }

            paginationContainer.style.display = 'flex';

            // Update prev/next buttons
            prevBtn.disabled = currentPage === 1;
            nextBtn.disabled = currentPage === totalPages;

            // Generate page numbers
            let pageNumbersHTML = '';
            const maxVisiblePages = 5;
            let startPage = Math.max(1, currentPage - Math.floor(maxVisiblePages / 2));
            let endPage = Math.min(totalPages, startPage + maxVisiblePages - 1);

            if (endPage - startPage + 1 < maxVisiblePages) {
                startPage = Math.max(1, endPage - maxVisiblePages + 1);
            }

            for (let i = startPage; i <= endPage; i++) {
                pageNumbersHTML += `
                    <button class="pagination-button ${i === currentPage ? 'active' : ''}" onclick="goToPage(${i})">
                        ${i}
                    </button>
                `;
            }

            pageNumbers.innerHTML = pageNumbersHTML;
        }

        function previousPage() {
            if (currentPage > 1) {
                currentPage--;
                displayWishlists();
                updatePagination();
            }
        }

        function nextPage() {
            const totalPages = Math.ceil(filteredWishlists.length / itemsPerPage);
            if (currentPage < totalPages) {
                currentPage++;
                displayWishlists();
                updatePagination();
            }
        }

