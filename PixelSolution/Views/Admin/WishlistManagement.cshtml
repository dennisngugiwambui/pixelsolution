<!-- Main Content -->
<div class="main-content" id="mainContent">
    <!-- Header -->
    <header class="header">
        <div class="header-left">
            <button class="sidebar-toggle" id="sidebarToggle">
                <i class="fas fa-bars"></i>
            </button>
            <h1 class="page-title">Wishlist Management</h1>
        </div>
        <div class="header-right">
            <div class="search-container">
                <input type="text" class="search-input" placeholder="Search customers..." id="searchInput">
                <i class="fas fa-search search-icon"></i>
            </div>
            <div class="header-actions">
                <button class="action-btn" title="Notifications">
                    <i class="fas fa-bell"></i>
                    <span class="notification-badge">3</span>
                </button>
                <button class="action-btn" title="Messages">
                    <i class="fas fa-envelope"></i>
                    <span class="notification-badge">8</span>
                </button>
                <button class="action-btn" title="Profile">
                    <i class="fas fa-user-circle"></i>
                </button>
            </div>
        </div>
    </header>

    <!-- Page Content -->
    <div class="dashboard-content">
        <!-- Summary Cards -->
        <div class="summary-cards">
            <div class="summary-card">
                <h3 id="totalWishlistItems">@Model.Sum(w => w.TotalItems)</h3>
                <p>Total Wishlist Items</p>
                <div class="trend-indicator trend-up">
                    <i class="fas fa-arrow-up"></i> 12% this month
                </div>
            </div>
            <div class="summary-card">
                <h3 id="activeWishlists">@Model.Count(w => w.TotalItems > 0)</h3>
                <p>Active Wishlists</p>
                <div class="trend-indicator trend-up">
                    <i class="fas fa-arrow-up"></i> 8% this month
                </div>
            </div>
            <div class="summary-card">
                <h3 id="totalWishlistValue">KSh @Model.Sum(w => w.TotalValue).ToString("N0")</h3>
                <p>Total Wishlist Value</p>
                <div class="trend-indicator trend-down">
                    <i class="fas fa-arrow-down"></i> 3% this month
                </div>
            </div>
            <div class="summary-card">
                <h3 id="avgItemsPerWishlist">@(Model.Count > 0 ? Math.Round((double)Model.Sum(w => w.TotalItems) / Model.Count, 1) : 0)</h3>
                <p>Avg Items per Wishlist</p>
                <div class="trend-indicator trend-up">
                    <i class="fas fa-arrow-up"></i> 5% this month
                </div>
            </div>
        </div>

        <!-- Bulk Actions and Insights Bar -->
        <div class="bulk-actions-bar">
            <div style="display: flex; justify-content: space-between; align-items: flex-start; flex-wrap: wrap; gap: 1rem;">
                <div>
                    <h3 style="margin: 0 0 0.5rem 0; font-size: 1.25rem;">Wishlist Analytics & Management</h3>
                    <p style="margin: 0; opacity: 0.9; font-size: 0.875rem;">Track customer interests and manage wishlist data effectively</p>
                </div>
            </div>
            
            <div class="insight-cards">
                <div class="insight-card">
                    <h4>@Model.Count(w => w.DaysOld <= 7)</h4>
                    <p>New This Week</p>
                </div>
                <div class="insight-card">
                    <h4>@Model.Count(w => w.DaysOld > 90)</h4>
                    <p>Stale (90+ days)</p>
                </div>
                <div class="insight-card">
                    <h4>@Model.Count(w => w.TotalItems >= 5)</h4>
                    <p>High Interest (5+ items)</p>
                </div>
                <div class="insight-card">
                    <h4>@(Model.Any() ? Math.Round(Model.Average(w => w.TotalValue), 0) : 0)</h4>
                    <p>Avg Wishlist Value</p>
                </div>
            </div>

            <div style="display: flex; gap: 1rem; margin-top: 1rem; flex-wrap: wrap;">
                <button class="btn btn-warning" onclick="clearStaleWishlists()" style="background: rgba(245, 158, 11, 0.9); border: none;">
                    <i class="fas fa-broom"></i> Clear Stale Wishlists (90+ days)
                </button>
                <button class="btn btn-danger" onclick="clearEmptyWishlists()" style="background: rgba(239, 68, 68, 0.9); border: none;">
                    <i class="fas fa-trash"></i> Clear Empty Wishlists
                </button>
                <button class="btn btn-secondary" onclick="exportWishlistData()" style="background: rgba(255,255,255,0.2); border: none;">
                    <i class="fas fa-download"></i> Export Analytics
                </button>
                <button class="btn btn-info" onclick="generateWishlistReport()" style="background: rgba(59, 130, 246, 0.9); border: none;">
                    <i class="fas fa-chart-line"></i> Generate Report
                </button>
            </div>
        </div>

        <!-- Filters and Actions Bar -->
        <div class="filters-bar">
            <div style="display: flex; justify-content: space-between; align-items: center; flex-wrap: wrap; gap: 1rem;">
                <div style="display: flex; gap: 1rem; align-items: center; flex-wrap: wrap;">
                    <div style="position: relative;">
                        <select id="wishlistStatusFilter" class="form-control" style="width: 150px;">
                            <option value="">All Wishlists</option>
                            <option value="active">Active (1+ items)</option>
                            <option value="empty">Empty</option>
                            <option value="new">New (< 7 days)</option>
                            <option value="stale">Stale (90+ days)</option>
                        </select>
                    </div>
                    <div style="position: relative;">
                        <select id="sortBy" class="form-control" style="width: 180px;">
                            <option value="recent">Sort by Recent Activity</option>
                            <option value="customer">Sort by Customer</option>
                            <option value="items">Sort by Items Count</option>
                            <option value="value">Sort by Total Value</option>
                            <option value="oldest">Sort by Oldest First</option>
                        </select>
                    </div>
                    <div style="position: relative;">
                        <input type="number" id="minItems" class="form-control" style="width: 120px;" placeholder="Min items" min="0">
                    </div>
                    <div style="position: relative;">
                        <input type="number" id="minValue" class="form-control" style="width: 120px;" placeholder="Min value" min="0">
                    </div>
                    <div style="position: relative;">
                        <input type="number" id="maxDays" class="form-control" style="width: 120px;" placeholder="Max days old" min="0">
                    </div>
                </div>
                <div style="display: flex; gap: 1rem;">
                    <button class="btn btn-secondary btn-sm" onclick="resetFilters()">
                        <i class="fas fa-undo"></i>
                        Reset
                    </button>
                    <button class="btn btn-primary btn-sm" onclick="refreshData()">
                        <i class="fas fa-sync-alt"></i>
                        Refresh
                    </button>
                </div>
            </div>
        </div>

        <!-- Wishlist Management Grid -->
        <div id="wishlistGrid" style="display: grid; grid-template-columns: repeat(auto-fill, minmax(380px, 1fr)); gap: 1.5rem;">
            @foreach (var wishlist in Model)
            {
                <div class="wishlist-card @(wishlist.TotalItems == 0 ? "empty" : wishlist.DaysOld > 90 ? "stale" : "active")" 
                     data-wishlist-id="@wishlist.CustomerId" 
                     data-status="@(wishlist.TotalItems == 0 ? "empty" : wishlist.DaysOld > 90 ? "stale" : "active")">
                    
                    <div class="wishlist-indicator wishlist-@(wishlist.TotalItems == 0 ? "empty" : wishlist.DaysOld > 90 ? "stale" : "active")">
                        @if (wishlist.TotalItems == 0)
                        {
                            <span>Empty</span>
                        }
                        else if (wishlist.DaysOld > 90)
                        {
                            <span>Stale</span>
                        }
                        else if (wishlist.DaysOld <= 7)
                        {
                            <span>New</span>
                        }
                        else
                        {
                            <span>Active</span>
                        }
                    </div>

                    <div style="display: flex; align-items: flex-start; gap: 1rem; margin-bottom: 1rem;">
                        <div class="customer-avatar">
                            @wishlist.CustomerName.Substring(0, 2).ToUpper()
                        </div>

                        <div style="flex: 1; min-width: 0;">
                            <h3 style="margin: 0 0 0.5rem 0; color: #1e293b; font-size: 1.25rem; line-height: 1.3;">@wishlist.CustomerName</h3>
                            <p style="margin: 0 0 0.25rem 0; color: #64748b; font-size: 0.875rem;">@wishlist.CustomerEmail</p>
                            <p style="margin: 0; color: #9ca3af; font-size: 0.75rem;">
                                @if (wishlist.TotalItems > 0)
                                {
                                    <span>Last updated: @wishlist.LastActivity.ToString("MMM dd, yyyy")</span>
                                }
                                else
                                {
                                    <span>No items in wishlist</span>
                                }
                            </p>
                        </div>
                    </div>

                    <div class="wishlist-stats">
                        <div class="stat-item">
                            <span class="stat-value">@wishlist.TotalItems</span>
                            <span class="stat-label">Total Items</span>
                        </div>
                        <div class="stat-item">
                            <span class="stat-value">KSh @wishlist.TotalValue.ToString("N0")</span>
                            <span class="stat-label">Wishlist Value</span>
                        </div>
                        <div class="stat-item">
                            <span class="stat-value">@wishlist.DaysOld</span>
                            <span class="stat-label">Days Old</span>
                        </div>
                    </div>

                    @if (wishlist.Items.Any())
                    {
                        <div class="wishlist-items-preview">
                            @foreach (var item in wishlist.Items.Take(4))
                            {
                                <div class="wishlist-item">
                                    <div class="product-info">
                                        <img src="@(item.ProductImage ?? "/images/placeholder.jpg")" alt="@item.ProductName" class="product-thumb">
                                        <div>
                                            <div style="font-weight: 600; font-size: 0.875rem; line-height: 1.2;">@item.ProductName</div>
                                            <div style="color: #64748b; font-size: 0.75rem;">
                                                @(item.InStock ? "In Stock" : "Out of Stock") • Added @item.CreatedAt.ToString("MMM dd")
                                            </div>
                                        </div>
                                    </div>
                                    <div style="text-align: right;">
                                        <div style="font-weight: 600; font-size: 0.875rem; color: @(item.InStock ? "#059669" : "#dc2626");">
                                            KSh @item.SellingPrice.ToString("N0")
                                        </div>
                                        <div style="font-size: 0.75rem; color: #64748b;">
                                            @(item.InStock ? $"Stock: {item.StockQuantity}" : "No Stock")
                                        </div>
                                    </div>
                                </div>
                            }
                            @if (wishlist.Items.Count > 4)
                            {
                                <div style="text-align: center; color: #64748b; font-size: 0.75rem; margin-top: 0.5rem; padding-top: 0.5rem; border-top: 1px solid #e2e8f0;">
                                    +@(wishlist.Items.Count - 4) more items
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div style="text-align: center; padding: 2rem; color: #9ca3af; font-style: italic;">
                            <i class="fas fa-heart" style="font-size: 2rem; margin-bottom: 0.5rem; opacity: 0.3;"></i>
                            <div>Empty wishlist</div>
                        </div>
                    }

                    <div class="quick-actions">
                        <button class="btn btn-secondary btn-sm" onclick="viewWishlistDetails(@wishlist.CustomerId)" title="View Wishlist Details">
                            <i class="fas fa-eye"></i>
                        </button>
                        <button class="btn btn-primary btn-sm" onclick="viewCustomerProfile(@wishlist.CustomerId)" title="Customer Profile">
                            <i class="fas fa-user"></i>
                        </button>
                        @if (User.IsInRole("Admin"))
                        {
                            @if (wishlist.TotalItems > 0)
                            {
