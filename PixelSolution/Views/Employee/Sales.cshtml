                    <div style="display: flex; gap: 0.5rem;">
                        <select id="categoryFilter" class="filter-select">
                            <option value="">All Categories</option>
                        </select>
                        <select id="stockFilter" class="filter-select">
                            <option value="">All Stock</option>
                            <option value="in-stock">In Stock</option>
                            <option value="low-stock">Low Stock</option>
                        </select>
                    </div>
                </div>

                <!-- Stock Warning -->
                <div class="stock-warning" id="stockWarning">
                    <i class="fas fa-exclamation-triangle"></i>
                    <span id="stockWarningText"></span>
                </div>

                <!-- Products Grid -->
                <div id="productsContainer">
                    <div style="text-align: center; padding: 4rem; color: #64748b;">
                        <i class="fas fa-spinner fa-spin" style="font-size: 2rem; margin-bottom: 1rem;"></i>
                        <h3>Loading products...</h3>
                    </div>
                </div>
            </div>

            <!-- Cart Section -->
            <div class="cart-section">
                <!-- Cart Header -->
                <div class="cart-header">
                    <h2 style="font-size: 1.1rem; font-weight: 700; margin-bottom: 0.75rem; color: #1f2937;">
                        <i class="fas fa-shopping-cart" style="color: #3b82f6; margin-right: 0.5rem;"></i>
                        Current Sale
                    </h2>
                    <div style="display: flex; justify-content: space-between; align-items: center; font-size: 0.85rem;">
                        <span style="color: #6b7280; font-weight: 600;">Items: <span id="cartItemCount">0</span></span>
                        <span style="color: #6b7280; font-weight: 600;">Subtotal: <strong id="cartSubtotalDisplay" style="color: #10b981;">KSh 0.00</strong></span>
                    </div>
                </div>

                <!-- Cart Items -->
                <div class="cart-items" id="cartItems">
                    <div class="empty-cart">
                        <i class="fas fa-shopping-cart"></i>
                        <h3>Your cart is empty</h3>
                        <p>Add products to start a sale</p>
                    </div>
                </div>

                <!-- Cart Footer -->
                <div class="cart-footer">
                    <div class="cart-total">
                        <div class="total-row">
                            <span>Subtotal:</span>
                            <span id="subtotalAmount">KSh 0.00</span>
                        </div>
                        <div class="total-row">
                            <span>Tax (16%):</span>
                            <span id="taxAmount">KSh 0.00</span>
                        </div>
                        <div class="total-row final">
                            <span>Total:</span>
                            <span id="totalAmount">KSh 0.00</span>
                        </div>
                    </div>

                    <div class="action-buttons">
                        <button class="btn btn-secondary" onclick="clearCart()" id="clearBtn" disabled>
                            <i class="fas fa-trash"></i> Clear
